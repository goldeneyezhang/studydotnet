@using LearnNetCore.ViewModel
@model RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form asp-controller="Demo" asp-action="RegisterInput" method="post">
	Email:<input asp-for="Email" /><br />
	Password:<input asp-for="Password" /><br />
	Address:<input asp-for="Address.AddressLine1" /><br />
	Country:<select asp-for="Country" asp-items="Model.Countries">
		<option value="">--none--</option>
	</select>
	<br />
	Country:<select asp-for="EnumCountry"
					asp-items="Html.GetEnumSelectList<CountryEnum>()">
		>
	</select>
	<br />
	CountryGroup:<select asp-for="CountryGroup.CountryCodes" asp-items="Model.CountryGroup.Countries"></select>
	<br />
	<button type="submit">Register</button>
</form>
